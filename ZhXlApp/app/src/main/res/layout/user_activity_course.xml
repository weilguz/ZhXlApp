<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_comm_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.idyoga.yoga.view.TableVIew
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:textColor="@color/un_select_login_mode_"
        android:textSize="14sp"
        app:indicatorWidth="25dp"
        app:apTabDividerColor="#00000000"
        app:apTabDrawMode="text"
        app:apTabIndicatorColor="#8338F9"
        app:apTabTextSelectColor="#8338F9"
        app:apTabUnderlineColor="#00000000" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs" />

</LinearLayout>