<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_search_title"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/app_name"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/text_color"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/iv_address"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:src="@drawable/ic_home_address_position" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/iv_address"
            android:gravity="center"
            android:text="广州" />
    </LinearLayout>


    <EditText
        android:visibility="visible"
        android:id="@+id/et_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:focusable="false"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:focusableInTouchMode="false"
        android:layout_centerVertical="true"
        android:paddingLeft="14dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ll_address"
        android:layout_toStartOf="@+id/iv_search"
        android:background="@drawable/bg_home_search"
        android:hint="课程名称/瑜伽馆名称/导师名称"
        android:textColor="@color/text_color"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_search"
        android:visibility="visible"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/nav_icon_searching_default" />
</RelativeLayout>

