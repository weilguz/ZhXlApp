<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingLeft="12dp"
        android:layout_height="30dp">

        <TextView
            android:text="相关视频推荐"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_other_video"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_image"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_video_image"
                android:scaleType="fitXY"
                android:layout_width="100dp"
                android:layout_height="80dp" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_name"
            android:textSize="16sp"
            android:text="sdfsdf"
            android:textColor="@color/text_color"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cv_image"
            android:layout_alignTop="@id/cv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_video_other"
            android:text="sdfsdfsdf"
            android:textSize="14sp"
            android:layout_below="@id/tv_name"
            android:layout_alignLeft="@id/tv_name"
            android:textColor="@color/text_color_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_video_num"
            android:text="14sp"
            android:textSize="14sp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/text_color_6"
            android:layout_alignBottom="@id/cv_image"
            android:layout_alignLeft="@id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_free"
            android:text="14sp"
            android:textSize="16sp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/again_appiontment"
            android:layout_alignBottom="@id/cv_image"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="#f8f8f8"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>