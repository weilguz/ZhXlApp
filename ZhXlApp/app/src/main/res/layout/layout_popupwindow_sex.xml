                android:textColor="@color/text_color_6"
                android:text="标签帅选" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_height="1dp"
            android:background="#f2f2f2" />

