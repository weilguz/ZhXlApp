<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_tag_image"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="11dp"
        android:layout_width="79dp"
        android:layout_height="79dp" />

    <TextView
        android:id="@+id/tv_tag_name"
        android:textSize="15sp"
        android:text="助眠减压"
        android:textColor="@color/text_color"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/iv_tag_image"
        android:layout_alignTop="@id/iv_tag_image"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_tag_detail"
        android:textSize="14sp"
        android:layout_alignLeft="@id/tv_tag_name"
        android:layout_below="@id/tv_tag_name"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_color_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>