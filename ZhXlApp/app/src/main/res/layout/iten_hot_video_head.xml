<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_root"
    android:background="@color/white"
    android:layout_height="44dp">

    <View
        android:id="@+id/img"
        android:layout_width="3dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:background="@drawable/drawable_title_left" />

    <TextView
        android:id="@+id/tv_head_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img"
        android:layout_marginLeft="6dp"
        android:textStyle="bold"
        android:text="@string/home_experience_recommend_class"
        android:textColor="@color/text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/tv_head_name"
        android:alpha="45"
        android:text="Project activities"
        android:textColor="@color/text_color_9"
        android:textSize="12sp" />


</RelativeLayout>