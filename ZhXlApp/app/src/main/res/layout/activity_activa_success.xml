<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idyoga.yoga.activity.card.ActivaSuccessActivity">

    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="5dp"
            android:src="@drawable/left_back"
            android:layout_centerVertical="true"
            android:layout_width="21dp"
            android:layout_height="21dp" />

        <TextView
            android:text="权益卡激活"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/iv_back_yellow"
            android:layout_centerInParent="true"
            android:background="@drawable/back_image"
            android:layout_width="298dp"
            android:layout_height="422dp" >

            <Button
                android:id="@+id/btn_see"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_see"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:text="查看权益 卡"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="43dp"
                android:layout_marginLeft="53dp"
                android:layout_marginRight="53dp"
                android:layout_width="match_parent"
                android:layout_height="43dp" />

            <Button
                android:id="@+id/btn_bespoke"
                android:text="去预约"
                android:textSize="15sp"
                android:textColor="#E23C3D"
                android:background="@drawable/bg_bespoke"
                android:layout_above="@id/btn_see"
                android:layout_marginLeft="53dp"
                android:layout_marginRight="53dp"
                android:layout_width="match_parent"
                android:layout_height="43dp" />

        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>
