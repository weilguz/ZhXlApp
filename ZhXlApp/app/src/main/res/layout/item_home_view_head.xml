<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="0.5dp"
        android:background="@color/white">

        <View
            android:id="@+id/img"
            android:layout_width="5dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/bg_mine_tv" />

        <TextView
            android:id="@+id/tv_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/img"
            android:text="@string/home_experience_recommend_class"
            android:textColor="@color/home_experience_font_recommend_class"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" android:background="#dcdcdc"/>
</LinearLayout>