<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.idyoga.yoga.activity.card.ActivationCardActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/activation_card_activity_bg"
            android:layout_width="match_parent"
            android:layout_height="360dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_marginTop="14dp"
                android:src="@drawable/left_bk"
                android:layout_marginLeft="5dp"
                android:layout_width="21dp"
                android:layout_height="21dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="#ffffff"
            android:paddingRight="36dp"
            android:paddingLeft="36dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_card_num"
                android:textSize="13sp"
                android:paddingLeft="10dp"
                android:textColor="#999999"
                android:hint="请输入卡号"
                android:maxLength="14"
                android:background="@drawable/bg_activation_card"
                android:layout_marginTop="49dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="42dp" />

            <EditText
                android:id="@+id/et_activ_code"
                android:paddingLeft="10dp"
                android:hint="请输入激活码"
                android:textSize="13sp"
                android:textColor="#999999"
                android:maxLength="16"
                android:gravity="center_vertical"
                android:layout_marginTop="19dp"
                android:background="@drawable/bg_activation_card"
                android:layout_width="match_parent"
                android:layout_height="42dp" />

            <RelativeLayout
                android:id="@+id/btn_activ"
                android:layout_width="match_parent"
                android:layout_marginTop="34dp"
                android:background="@drawable/activ_btn_hbg"
                android:layout_height="72dp">
                <TextView
                    android:text="立即激活"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginTop="16.5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

