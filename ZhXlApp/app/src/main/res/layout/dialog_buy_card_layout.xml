<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/ll_root">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="259dp"
        android:layout_height="359dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp">

            <ImageView
                android:id="@+id/iv_close"
                android:src="@drawable/prize_icon_close_default"
                android:layout_alignParentRight="true"
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="299dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="19dp"
            android:paddingRight="19dp">

            <ImageView
                android:id="@+id/iv_wx_core"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="5dp"
                android:layout_marginTop="26dp"/>

            <TextView
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="保存至手机"
                android:background="@drawable/save_image_phone__btn_bg"
                android:textColor="#8338F9"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="保存至手机微信扫码购买"
                android:textColor="@color/text_color_6"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>