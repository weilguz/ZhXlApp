<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idyoga.yoga.activity.user.WelcomeActivity">

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_back"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="15dp"
        android:layout_width="21dp"
        android:layout_height="21dp" />

    <TextView
        android:id="@+id/tv"
        android:text="欢迎回来"
        android:textSize="18sp"
        android:textColor="#8338F9"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.idyoga.yoga.view.CircleImageView
        android:id="@+id/iv_head"
        android:layout_above="@id/tv"
        android:scaleType="fitXY"
        android:src="@drawable/us_head"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        app:round_borderColor="#8338F9"
        app:round_borderWidth="1.5dp"
        android:layout_width="77dp"
        android:layout_height="77dp" />



</RelativeLayout>
