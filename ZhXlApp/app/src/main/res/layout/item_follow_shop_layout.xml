<?xml version="1.0" encoding="utf-8"?>
<com.idyoga.yoga.view.ShadowLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    app:shadow_alpha="0.3"
    app:shadow_radius="5dp"
    android:id="@+id/sl"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_height="85dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingRight="12dp"
        android:layout_height="match_parent">

        <View
            android:id="@+id/v_center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ImageView
            android:id="@+id/iv_shop_image"
            android:src="@drawable/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_width="55dp"
            android:layout_height="55dp" />

        <TextView
            android:id="@+id/tv_shop_name"
            android:text="震撼瑜伽馆"
            android:textColor="@color/text_color_6"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_shop_image"
            app:layout_constraintBottom_toTopOf="@+id/v_center"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_vip"
            android:src="@drawable/home_icon_certification_default"
            android:layout_width="15dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_shop_name"
            app:layout_constraintTop_toTopOf="@id/tv_shop_name"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/tv_group_buy"
            android:text="团"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_vip"
            app:layout_constraintTop_toTopOf="@id/iv_vip"
            android:background="@drawable/group_bg"
            android:layout_marginLeft="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_spike"
            android:text="秒"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_group_buy"
            app:layout_constraintTop_toTopOf="@id/tv_group_buy"
            android:background="@drawable/spike_bg"
            android:layout_marginLeft="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_address"
            android:text="天河区天盈创意园"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/iv_shop_image"
            app:layout_constraintTop_toBottomOf="@id/v_center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/text_color_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>

</com.idyoga.yoga.view.ShadowLayout>