<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:id="@+id/rl_root_course"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="122dp"
        android:layout_height="81dp">

        <ImageView
            android:id="@+id/iv_shop_image"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_course_name"
        android:text="舒缓肩颈有氧操"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:layout_toRightOf="@id/cv"
        android:layout_alignTop="@id/cv"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_course_tag1"
        android:text="时间自选"
        android:textSize="11sp"
        android:layout_toRightOf="@id/cv"
        android:layout_alignBottom="@id/cv"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:background="@drawable/course_tag_bg"
        android:textColor="@color/text_color_6"
        android:layout_marginRight="10dp"
        android:layout_width="57dp"
        android:layout_height="15dp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_course_tag2"
        android:text="时间自选"
        android:textSize="11sp"
        android:layout_toRightOf="@id/tv_course_tag1"
        android:layout_alignBottom="@id/cv"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textColor="@color/text_color_6"
        android:layout_width="57dp"
        android:layout_height="15dp" />

    <ImageView
        android:id="@+id/iv_right_btn"
        android:layout_marginRight="5dp"
        android:layout_width="20dp"
        android:src="@drawable/home_icon_click_r_default"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/cv"
        android:layout_marginBottom="14dp"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/tv_order_num"
        android:textSize="14sp"
        android:text="已约88次"
        android:layout_alignBottom="@+id/iv_right_btn"
        android:textColor="@color/text_color_6"
        android:layout_toLeftOf="@id/iv_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view_bottom"
        android:layout_alignParentBottom="true"
        android:background="#f8f8f8"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>