<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_simple_shop_info"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/ll_shop_name"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_below="@id/iv_shop_images"
        android:layout_width="match_parent"
        android:layout_height="69dp">

        <TextView
            android:id="@+id/tv_shop_names"
            android:paddingLeft="12dp"
            android:text="魔鬼瑜伽馆"
            android:textSize="17sp"
            android:textColor="@color/text_color"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_shop_introduce"
            android:paddingLeft="12dp"
            android:text="魔鬼瑜伽馆"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_color_6"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@id/ll_shop_name"
        android:background="#f8f8f8"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/ll_shop_address"
        android:orientation="horizontal"
        android:layout_below="@id/view"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <ImageView
            android:id="@+id/v_left"
            android:layout_centerVertical="true"
            android:src="@drawable/yoga_icon_time_default"
            android:layout_width="22dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/tv_iamge_address"
            android:text=""
            android:textSize="14sp"
            android:layout_toRightOf="@id/v_left"
            android:layout_marginLeft="7dp"
            android:textColor="@color/text_color"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="46dp" />

        <TextView
            android:id="@+id/tv_num"
            android:textSize="14sp"
            android:layout_marginRight="12dp"
            android:textColor="@color/text_color"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:background="#fafafa"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <include
        layout="@layout/item_course_tag_layout"/>

    <View
        android:background="#fafafa"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <include
        layout="@layout/item_course_require"/>

</LinearLayout>