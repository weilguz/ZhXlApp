                <ImageView
                    android:id="@+id/iv_card_left"
                    android:src="@drawable/user_icon_card_default"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="17dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
