<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <View
            android:id="@+id/v_head_bg"
            android:background="@drawable/mine_head_bg"
            android:layout_width="match_parent"
            android:layout_height="169dp"/>

        <LinearLayout
            android:paddingTop="8dp"
            android:layout_below="@+id/cv_user"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_view"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="88dp">

                <View
                    android:id="@+id/v_line"
                    android:background="@color/view_line"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="3dp"
                    android:layout_height="15dp"/>

                <TextView
                    android:text="即将开始的课程"
                    android:textSize="16sp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/v_line"
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_course_name"
                    android:text="舒缓肩颈有氧操"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:text="舒缓肩颈有氧操"
                    android:textColor="@color/text_color_6"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_course_time"
                    android:text="2018年12月7日 10:00"
                    android:textColor="@color/text_color_6"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_course_name"
                    android:layout_marginRight="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


