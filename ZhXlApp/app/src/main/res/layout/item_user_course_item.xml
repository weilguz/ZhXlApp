<?xml version="1.0" encoding="utf-8"?>
<com.idyoga.yoga.view.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    android:elevation="5dp"
    app:shadow_alpha="0.3"
    app:shadow_radius="5dp">

    <!--xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/cv_root"
    app:cardElevation="20dp"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp">-->

    <RelativeLayout
        android:id="@+id/rlv_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="15dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_course_item_img"
            android:layout_width="122dp"
            android:layout_height="81dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_course_item_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_course_img" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toEndOf="@+id/cv_course_item_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_course_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/text_color"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_course_item_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/app_name"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_course_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:lines="1"
                android:text="@string/app_name"
                android:textColor="@color/text_color_9"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

    <!--<include layout="@layout/view_line"/>-->
</com.idyoga.yoga.view.ShadowLayout><!--</android.support.v7.widget.CardView>-->