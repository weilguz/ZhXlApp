<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="0.5dp"
        android:background="@color/white">

        <View
            android:id="@+id/img"
            android:layout_width="5dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/bg_mine_tv" />

        <TextView
            android:id="@+id/tv_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img"
            android:text="@string/home_experience_recommend_class"
            android:textColor="@color/home_experience_font_recommend_class" />

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:textColor="@color/theme_1" />

        <View
            android:layout_width="match_parent"
            android:background="#f4f4f4"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp" />

        <View
            android:layout_width="match_parent"
            android:background="#f4f4f4"
            android:layout_alignParentTop="true"
            android:layout_height="1dp" />

    </RelativeLayout>

</LinearLayout>