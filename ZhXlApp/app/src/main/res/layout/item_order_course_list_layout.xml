<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="111dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:paddingLeft="12dp"
        android:paddingRight="5dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            android:layout_width="122dp"
            android:layout_height="81dp">

            <ImageView
                android:id="@+id/iv_course_image"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_course_name"
            android:text="舒缓肩颈有氧操"
            android:textSize="17sp"
            app:layout_constraintLeft_toRightOf="@id/cv_image"
            app:layout_constraintTop_toTopOf="@id/cv_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_teacher_name"
            android:text="黄老师"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/cv_image"
            app:layout_constraintTop_toBottomOf="@id/tv_course_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_time"
            android:text="09:00~09:30"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/tv_teacher_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_teacher_name"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_color_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_people_num"
            app:layout_constraintLeft_toLeftOf="@id/tv_teacher_name"
            app:layout_constraintTop_toBottomOf="@id/tv_teacher_name"
            android:text="剩余3名额"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_color_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_right"
            android:src="@drawable/home_icon_click"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="22dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/tv_order_people_num"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_people_num"
            android:layout_marginRight="22dp"
            android:text="已约128次"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_color_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_select"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_teacher_name"
            android:layout_marginRight="10dp"
            android:text="选择"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_select"
            android:layout_marginRight="5dp"
            android:background="@drawable/course_list_select"
            app:layout_constraintRight_toLeftOf="@id/tv_select"
            app:layout_constraintBottom_toBottomOf="@id/tv_select"
            android:layout_width="22dp"
            android:layout_height="22dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>