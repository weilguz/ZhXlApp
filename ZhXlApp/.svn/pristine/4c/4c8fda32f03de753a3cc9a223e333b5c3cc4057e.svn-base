<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_course_img" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tutor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHEN"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/text_color" />

            <vip.devkit.view.common.suklib.view.FlowLayout.TagFlowLayout
                android:id="@+id/tag_view_tutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="6dp"
                android:visibility="gone"></vip.devkit.view.common.suklib.view.FlowLayout.TagFlowLayout>
        </RelativeLayout>
</LinearLayout>