<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:padding="3dp"
        android:src="@drawable/ic_user_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="100dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_register"
            android:textColor="#333333"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="@string/user_login_mobile"
            android:textColor="#404b69"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_handset"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@null"
            android:inputType="number"
            android:textColor="@color/text_color"
            android:textCursorDrawable="@drawable/bg_a_12"
            android:textSize="16sp" />

        <include layout="@layout/view_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/user_register_input_pwd1"
            android:textColor="#404b69"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp">

            <EditText
                android:id="@+id/et_in_pwd_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toStartOf="@+id/ll_switch_1"
                android:background="@null"
                android:inputType="textPassword"
                android:textColor="@color/text_color"
                android:textCursorDrawable="@drawable/bg_a_12"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_switch_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_switch_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_user_pwd_close" />
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/view_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/user_register_input_pwd2"
            android:textColor="#404b69"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/et_in_pwd_2"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_toStartOf="@+id/ll_switch_2"
                android:background="@null"
                android:inputType="textPassword"
                android:textColor="@color/text_color"
                android:textCursorDrawable="@drawable/bg_a_12"
                android:textSize="16sp" />


            <LinearLayout
                android:id="@+id/ll_switch_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_switch_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_user_pwd_close" />
            </LinearLayout>

        </RelativeLayout>

        <include layout="@layout/view_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/user_sms_num"
            android:textColor="#404b69"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_toStartOf="@+id/btn_get_code"
                android:background="@null"
                android:inputType="number"
                android:textColor="@color/text_color"
                android:textCursorDrawable="@drawable/bg_a_12"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_get_code"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_login_et"
                android:text="@string/user_get_smsnum"
                android:textColor="#404b69"
                android:textSize="12sp" />
        </RelativeLayout>

        <include layout="@layout/view_line" />


        <Button
            android:id="@+id/btn_submit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_a_11"
            android:text="@string/user_register"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


</RelativeLayout>